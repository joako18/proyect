<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:layout_weight="4"
        android:gravity="center"
        android:src="@drawable/ucr2" />
  
    <Button
        android:id="@+id/btnRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F78181"
        android:drawableLeft="@drawable/ic_afiliate"
        android:drawableRight="@drawable/ic_ir"
        android:ellipsize="none"
        android:onClick="btnPlay"
        android:text="Afiliate a la ucr" />

    <Button
        android:id="@+id/btplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnMap"
        android:drawableLeft="@drawable/ic_calendar2"
        android:drawableRight="@drawable/ic_ir"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:text="Demo Mapa carteleria" />

    <Button
        android:id="@+id/btnweb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnweb"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:drawableLeft="@drawable/ic_recorrido"
      android:drawableRight="@drawable/ic_ir"
        android:background="#00addb"
        android:text="Recorridos, caravanas o caminatas" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
         android:drawableLeft="@drawable/ic_calendar"
      android:drawableRight="@drawable/ic_ir"
         android:onClick="btnAddEvent"
        android:background="#00addb"
        android:text="Agregar Evento" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:onClick="btnListaActividades"
            android:drawableLeft="@drawable/ic_calendar"
      android:drawableRight="@drawable/ic_ir"
        android:text="calendario de Actividades" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
         android:drawableLeft="@drawable/ic_sugerencias"
        android:drawableRight="@drawable/ic_ir"
         android:onClick="btnContacto"
        android:text="Contacta con Nosotros" />

    <TextView
        android:id="@+id/txBienvenida"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1fa67a"
        android:gravity="center"
        android:text="DESARROLLO FEROZO SOLUCIONES INFORMATICAS(c) 2017"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>